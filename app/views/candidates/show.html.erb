<h2><%= t('candidate.show.Profile') %></h2>

<%= image_tag @candidate.avatar.url(:thumb) if @candidate.avatar? %>


<p>
  <strong>Date of birth:</strong>
  <%= @candidate.date_of_birth %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @candidate.phone %>
</p>


<a href="<%= @candidate.cv %>" download>Download CV</a> 
<p>

<% if current_user.id == @candidate.user_id %>
  <%= link_to 'Edit', edit_candidate_path(@candidate) %>|
<% end %>
<%= link_to 'Back', root_path %>
