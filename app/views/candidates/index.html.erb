<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Candidate name</th>
      <th>Date of birth</th>
      <th>Phone</th>
      <th>Avatar</th>
      <th>Cv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.user_id %></td>
        <td><%= candidate.user.first_name %></td>
        <td><%= candidate.date_of_birth %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.avatar %></td>
        <td><%= candidate.cv %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

