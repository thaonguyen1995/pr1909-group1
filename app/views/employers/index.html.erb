<h1>Employers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Company logo</th>
      <th>Company name</th>
      <th>Company size</th>
      <th>Company description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
    <tr>
      <td><%= employer.user_id %></td>
      <td><%= employer.company_logo %></td>
      <td><%= employer.company_name %></td>
      <td><%= employer.company_size %></td>
      <td><%= raw(employer.company_description) %></td>
      <td><%= link_to 'Show', employer %></td>
      <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
      <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employer', new_employer_path %>