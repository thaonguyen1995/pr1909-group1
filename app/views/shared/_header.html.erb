<!-- start header -->
<header>
  <div class="container">
    <div class="row">
      <div class="phone col-md-4 col-sm-4 col-xs-5">
        <p><i class="fa fa-phone"></i><span>Phone</span>010-020-030</p>
      </div>
      <div class="email col-md-4 col-sm-4 col-xs-5">
        <p>
          <i class="fa fa-envelope"></i><span>Email</span>
          <a href="#">job@gmail.com</a>
        </p>
      </div>
      <div class="language col-md-4 col-sm-4 col-xs-2">
        <%= link_to "EN", locale:"en" %> | <%= link_to "VI", locale:"vi" %>
      </div>
    </div>
  </div>
</header>
<!-- end header -->
<!-- start navigation -->
<nav class="navbar navbar-default templatemo-nav" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon icon-bar"></span>
        <span class="icon icon-bar"></span>
        <span class="icon icon-bar"></span>
      </button>
      <%= link_to 'JobUp', root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav pull-right ">
        <li><%= link_to t('layouts.header.Home'), root_path %></li>
        <li><%= link_to 'Blog', blog_path %></li>
        <% if user_signed_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <p> Hello
              <%= current_user.first_name %><span class="caret"></span>
            </p>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t('layouts.header.Account setting'), edit_user_registration_path %></li>
            <% if current_user.user_type == 'candidate' %>
              <li><%= link_to t('layouts.header.Profile'), candidate_path(current_user.candidate) %></li>
            <% elsif current_user.user_type == 'employer' %>
              <li><%= link_to t('layouts.header.Profile'), employer_path(current_user.employer) %></li>
            <% end %>
              <li><%= link_to t('layouts.header.Log out'), destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
        <% else %>
        <li>
          <%= link_to t('layouts.header.Log in'), new_user_session_path %>
        </li>
        <li>
          <%= link_to t('layouts.header.Sign up'), new_user_registration_path %>
        </li>
        <% end %>
      </ul>

    </div>
  </div>
</nav>
<!-- end navigation -->
